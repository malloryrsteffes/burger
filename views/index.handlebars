<div class="container">
    <div class="jumbotron text-center">
        <h1>Eat Da Burger!</h1>
    </div>

    <!-- Burgers Ready to Eat -->
    <div class="row">
        <div class="col-md-4 offset-1">
            <h4>Now Serving:</h4>
            <ul class="list-group">
                {{#each burgers}}
                {{#unless this.devoured}}
                <li class="list-group-item">
                    <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
                     <p>{{this.burger_name}}</p>
                        <button class="eat-burger btn btn-primary" data-id="{{id}}" data-newdevour="{{devour}}"
                            type="submit">Eat it!</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>


        <!-- Burgers Eaten-->

        <div class="col-md-4 offset-2">
            <h4>Burgers Eaten:</h4>

            <ul class="list-group">
                {{#each burgers}}
                {{#if this.devoured}}
                <li class="list-group-item">
                    <p>{{this.burger_name}}</p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-3">

            <form class="create-form">
                <p class="lead">Add a Burger</p>
                <div class="form-group">
                    <label for="burgerName">Name:</label>
                    <input type="text" id="burgerName" name="name">
                </div>
                <button class="btn btn-success" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>