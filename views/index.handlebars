<div class="container">
    <div class="jumbotron text-center">
        <h1>Eat Da Burger!</h1>
    </div>
    <div class="container" id="mainContainer">
        <!-- Burgers Ready to Eat -->
        <div class="row">
            <div class="col-md-4 offset-1">
                <h4>Now Serving:</h4>
                <ul class="list-group">
                    {{#each burgers}}
                    {{#unless this.devoured}}
                    <li class="list-group-item">
                        <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
                            <p class="lead">{{this.burger_name}}</p>
                            <button class="eat-burger btn btn-lg btn-primary" data-id="{{this.id}}"
                                data-newdevour="{{devour}}" type="submit">
                                <img src="https://webstockreview.net/images/clipart-food-11.png" width="25px"
                                    height="25px" class="mr-2">
                                Eat it!</button>
                        </form>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>


            <!-- Burgers Eaten-->

            <div class="col-md-4 offset-2">
                <h4>Burgers Eaten:</h4>

                <ul class="list-group">
                    {{#each burgers}}
                    {{#if this.devoured}}
                    <li class="list-group-item">
                        <p class="lead">{{this.burger_name}}</p>
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 offset-3">

                <form class="create-form">
                    <p class="lead">Add a Burger</p>
                    <div class="form-group">
                        <label for="burgerName">Name:</label>
                        <input type="text" id="burgerName" name="name" required>
                    </div>
                    <button class="btn btn-success" type="submit">
                        <img src="https://webstockreview.net/images/clipart-food-11.png" width="25px" height="25px"
                            class="mr-2">
                        Add Burger</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="footer text-center">
